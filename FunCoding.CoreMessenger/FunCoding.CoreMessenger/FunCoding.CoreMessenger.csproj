    <Copyright>FunCoding@2019</Copyright>
    <RepositoryUrl>https://github.com/yanxiaodi/CoreMessenger</RepositoryUrl>
    <AssemblyVersion>0.1.3.0</AssemblyVersion>
  </PropertyGroup>
  <ItemGroup>
    <Content Include="readme.txt">
      <Pack>true</Pack>
      <PackagePath>\</PackagePath>
    </Content>
  </ItemGroup>
</Project>
